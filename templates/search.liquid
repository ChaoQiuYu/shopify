{% paginate collections by 4 %}

    {% if search.performed %}
        <h1>Your results</h1>

        {% for result in search.results %}
            {% if result.object_type == "page" %}
                <a href="{{ result.url }}">{{ result.title }}</a>
            {% elseif result.object_type == "article" %}
                <a href="{{ result.url }}">{{ result.title }}</a>
            {% else %}
                <a href="{{ result.url }}">{{ result.title }}</a>
            {% endif %}
        {% endfor %}

    {% else %}
        <h1>try to search for something</h1>
    {% endif %}

    {{ paginate | default_pagination }}
{% endpaginate %}